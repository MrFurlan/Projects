@model WebTeste.Models.Categoria

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Excluir Categoria";
}

<div class="panel panel panel-default">
    <div class="panel-heading">
        Excluir Categoria
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.Name, "Nome", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        @Html.HiddenFor(model => model.CategoriaId)
                        @Html.HiddenFor(model => model.Name)

                        <input type="submit" value="Excluir" class="btn btn-danger" />
                        @Html.ActionLink("Retornar", "Index", null, new { @class = "btn btn-success" })
                    }
                </div>
            </div>
        </div>
    </div>
</div>